<p id="notice"><%= notice %></p>
<div class="row mlxl mrxl">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2>Listing Matrices:</h2>
    </div>
    <div class="panel-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Value</th>
            <th>Cost</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody class=''>
          <% @matrices.each do |matrix| %>
            <tr>
              <td><%= matrix.name %></td>
              <td><%= matrix.value %></td>
              <td><%= matrix.cost %></td>
              <td><%= link_to 'Show', matrix %></td>
              <td><%= link_to 'Edit', edit_matrix_path(matrix) %></td>
              <td><%= link_to 'Destroy', matrix, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= link_to 'New Matrix', new_matrix_path, class: 'btn btn-default' %>
</div>
